<div data-controller="counter" data-counter-count-value="42" class="flex flex-col mt-3">
  <div class="text-2xl">
    The count is: <span data-counter-target="result"></span>
  </div>
  <div class="flex space-x-4 mt-4">
    <button class="flex px-3 py-2 bg-red-400 mr-1 text-white font-semibold rounded" data-action="counter#inc">+</button>
    <button class="flex px-3 py-2 bg-blue-400 mr-1 text-white font-semibold rounded" data-action="counter#dec">-</button>
  </div>
</div>
